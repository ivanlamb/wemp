<view class="main">
  <view class="categroy-left">
    <view wx:for="{{category}}" wx:key="index" data-id="{{item.cata_id}}" data-index="{{index}}" bindtap="switchTab" class="cate-list {{curIndex === index?'on':''}}">{{item.cata_desc}}</view>
  </view>

  <scroll-view class="categroy-right" scroll-y="{{isScroll}}" scroll-into-view="{{toView}}" scroll-with-animation="true">
    <view wx:for="{{detail}}" wx:key="index">
      <view id="{{item.cata_desc}}" class="cate-box">
        <view class="product">
          <!-- <image class="test" src="{{item.item_pic_url}}"></image> -->
          <text>{{item.item_short_desc}}</text>
          <text>{{item.item_price}}</text>
        </view>
      </view>
    </view>
  </scroll-view>

</view>